# Uyghur → IPA transliteration rules (ug_ipa.rules)
# Source: Uyghur Arabic script to IPA mapping
# ICU transliterator syntax — NFC output

# ─────────────────────────────────────────────────────────────────────────────
# Consonants
ب > b ;
چ > t͡ʃ ;
د > d ;
ج > d͡ʒ ;
ف > f ;
گ > ɡ ;
ھ > h ;
ك > k ;
ل > l ;
م > m ;
ن > n ;
ڭ > ŋ ;
پ > p ;
ق > q ;
ر > r ;
س > s ;
ش > ʃ ;
ت > t ;
ۋ > w ;  # often pronounced as v
خ > x ;
غ > ʁ ;
ي > j ;
ز > z ;
ژ > ʒ ;

# Hamza (maps to nothing)
ئ >  ;

# ─────────────────────────────────────────────────────────────────────────────
# Vowels
و > o ;
ۇ > u ;
ى > i ;
ې > e ;
ە > æ ;  # sometimes transcribed as ɛ
ا > ɑ ;
ۈ > y ;
ۆ > ø ;

